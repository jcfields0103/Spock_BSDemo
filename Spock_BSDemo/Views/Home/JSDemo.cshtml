<style>
    .btn_purple{
        background-color:purple;
        color:white;
     
    }
</style>
<h2>Enter 5 Integers </h2>

<div class="row">
    <div class="col-md-3">
       Enter Number 1:
    </div>
    <div class="col-md-3">
        <input type="number" id="input1" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        Enter Number 2:
    </div>
    <div class="col-md-3">
        <input type="number" id="input2" />
    </div>
</div>
<div class="row">
    <div class="col-md-6">
         <button id="btn1" class="btn btn_purple">Calculate!</button>
    </div>
</div>
<hr/>
<div class="row text-center h3">
    <div class="col-md-12"> Here are the results</div>
    </div>
<div class="row">
    <div class="col-md-6">
        <p id="sum"></p>
    </div>
    <div class="col-md-6">
        <p id="mult"></p>
    </div>
</div>
<!-- How do I interact with the Document Object Model (DOM)-->

<!-- Step 1: Get the Data
     Step 2: Do Something with the data like make a calculation
     Step 3: Show the result to the user
    -->
@section scripts{
    <script>
        $("#btn1").click(function () {
            //Step 1
            var num1 = +$("#input1").val();
            var num2 = +$("#input2").val();
            //Step 2
            var sum = num1 + num2;
            var mult = num1 * num2;
            //Step 3
            $("#sum").text("The sum is:" + sum);
            $("#mult").text("The product is:" + mult);
        })
    </script>
    }
